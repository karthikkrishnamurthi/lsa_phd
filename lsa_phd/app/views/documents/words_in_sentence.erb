<h1>Words <%= @s.words.count %></h1>
<table>
  <tr>
    <th>Word</th>
    <th>Sentence</th>
    <th>Document</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @s.words.each do |word| %>
  <tr>
    <td><%= word.word %></td>
    <td><%= word.sentence_id %></td>
    <td><%= word.document_id %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
<a href="/documents/sentences/<%= @s.document_id %>">Back</a>