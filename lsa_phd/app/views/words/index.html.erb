<h1>Words <%= @words.count %></h1>

<table>
  <tr>
    <th>Id</th>
    <th>Word</th>
    <th>Sentence</th>
    <th>Document</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.id %></td>
    <td><%= word.word %></td>
    <td><%= word.sentence_id %></td>
    <td><%= word.document_id %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Delete', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

